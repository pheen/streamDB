%section#about{ 'data-speed' => "10", 'data-type' => "background" }
  %ul.streams{ 'data-layer' => 0 }
    - @snow_streams.each do |stream|
      %li{ class: new?(stream), style: "background: url('#{stream.thumbnail}') 100% center;" }
        %a{ href: stream.url, direct: stream.direct_url? }
          %p.details
            %span.title= stream.title
            %br
            %span.play_count= stream.plays_by(@current_user)
